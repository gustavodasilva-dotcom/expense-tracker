@{
    ViewData["Title"] = "Login";
}

<style>
    .login-alert:empty {
        display: none;
    }
</style>

<main>
    <section class="contact">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center">
                <div class="col-lg-12 text-center">
                    <header class="section-header">
                        <p>Log in or sign up</p>
                    </header>
                </div>
                <div class="col-lg-6">
                    <form method="post">
                        <div class="alert alert-danger login-alert" role="alert">@ViewBag.message</div>
                        <div class="mb-3">
                            <label for="userEmail" class="form-label">Email</label>
                            <input type="email" class="form-control email" id="email" name="email" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="userPassword" class="form-label">Password</label>
                            <input type="password" class="form-control password" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <button type="button" class="btn btn-light">Forgot my password</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>