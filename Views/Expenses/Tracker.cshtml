@{
    ViewData["Title"] = "Tracker";
}

<main>
    <section class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="~/Home/Index">Home</a></li>
                <li><a href="~/Expenses/Overview">Overview</a></li>
                <li>Tracker</li>
            </ol>
            <h2>Tracker</h2>
        </div>
    </section>
    <section>
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="row">
                    @Html.Partial("~/Views/Expenses/_monthlyIncome.cshtml")
                    @Html.Partial("~/Views/Expenses/_addNewExpense.cshtml")
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <div class="card shadow mb-4 p-4">
                            <table class="table table-striped tb-expenses">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Value</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Expense Type</th>
                                        <th scope="col">Comment</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                <tbody class="tb-expenses-rows"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/js/pages/Expenses/Tracker/index.js"></script>
    <script>
        TrackerIndexPage.init();
    </script>
}